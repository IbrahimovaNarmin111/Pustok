@using Pustok.Models;
@model List<Author>
    @{
        int count = 0;
    }
<div class="row"
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Authors</h4>
          <a class="btn btn-primary rounded-pill" asp-controller="Author" asp-action="Create">Create</a>
                
            
            <div class="table-responsive pt-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                FullName
                            </th>
                            <th>
                                Author
                            </th>
                            <th>
                                Settings
                            </th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                                {
                                    count++;

                           <tr>
                            
                            <td>
                                @count
                            </td>
                            <td>
                                @item.FullName
                            </td>
                               
                                   <td><a class="btn btn-success rounded-pill" asp-controller="Author" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                   <a class="btn btn-danger rounded-pill" asp-controller="Author" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                               </td>

                            </tr>
                       }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
@using Pustok.Models;
@model List< Book>
@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sliders</h4>
                <a class="btn btn-primary rounded-pill" asp-controller="Book" asp-action="Create">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                  Author Name
                                </th>
                            
                                <th>
                                   Category
                                </th>
                                <th>
                                    Tag Name
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Book book in Model)
                            {
                                count++;

                            <tr>

                                <td>
                                    @count
                                </td>
                                <td>
                                    <img src="~/uploads/product/@book.BookImages.FirstOrDefault(i=>i.IsPrimary==true)?.Image" alt="">
                                </td>
                                <td>
                                    @book.Name
                                </td>
                                <td>
                                    @book.Author.FullName

                                </td>
                                <td>
                                    @book.Category.Name

                                </td>
                                <td>
                                    @foreach(var item in book.BookTags)
                                        {
                                         @item.Tag.Name
                                        }

                                </td>
                                
                                <td>
                                    <a class="btn btn-success rounded-pill" asp-controller="Book" asp-action="Update" asp-route-id="@book.Id">Update</a>
                                    <a class="btn btn-danger rounded-pill" asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id">Delete</a>
                                </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@using Pustok.Models;
@model List<Setting>
@{
    int count = 0;
}
<div class="row">
   <div class="col-lg-12 grid-margin stretch-card">
       <div class="card">
           <div class="card-body">
            <h4 class="card-title">Settings</h4>
          <a class="btn btn-primary rounded-pill" asp-controller="Setting" asp-action="Create">Create</a>


            <div class="table-responsive pt-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Key
                            </th>
                            <th>
                              Value
                            </th>
                            <th>
                                Settings
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                            @foreach (var setting in Model)
                            {
                                count++;

                               <tr>

                                <td>
                                        @count
                                </td>
                                <td>
                                        @setting.Key
                                </td>
                                    <td>
                                        @setting.Value
                                    </td>

                                       <td><a class="btn btn-success rounded-pill" asp-controller="Setting" asp-action="Update" asp-route-id="@setting.Id">Update</a>
                                       <a class="btn btn-danger rounded-pill" asp-controller="Setting" asp-action="Delete" asp-route-id="@setting.Id">Delete</a>
                                   </td>

                                </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
       </div>
</div>

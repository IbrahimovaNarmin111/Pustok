@model RegisterVM
<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
				<!-- Login Form s-->
				<form method="Post">
					<div class="login-form">
						<h4 class="login-title">New Customer</h4>
						<p><span class="font-weight-bold">I am a new customer</span></p>
						<div class="row">
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Name">Name</label>
								<input asp-for="Name" class="mb-0 form-control" type="text" 
							     placeholder="Enter your name">
								 <span asp-validation-for="Name" style="color:red"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Surname">Surname</label>
								<input asp-for="Surname" class="mb-0 form-control" type="text" 
									   placeholder="Enter your surname">
								<span asp-validation-for="Surname" style="color:red"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Username">Username</label>
								<input asp-for="Username" class="mb-0 form-control" type="text" 
									   placeholder="Enter your username">
								<span asp-validation-for="Username" style="color:red"></span>
							</div>
							<div class="col-12 mb--20">
								<label asp-for="Email">Email</label>
								<input asp-for="Email" class="mb-0 form-control" type="email"  placeholder="Enter Your Email Address Here..">
								<span asp-validation-for="Email" style="color:red"></span>
							</div>
							<div class="col-lg-6 mb--20">
								<label asp-for="Password">Password</label>
								<input asp-for="Password" class="mb-0 form-control" type="password"  placeholder="Enter your password">
								<span asp-validation-for="Password" style="color:red"></span>
							</div>
							<div class="col-lg-6 mb--20">
								<label asp-for="ConfirmPassword">Confirm Password</label>
								<input asp-for="ConfirmPassword" class="mb-0 form-control" type="password"  placeholder="Repeat your password">
								<span asp-validation-for="ConfirmPassword" style="color:red"></span>
							</div>
							<div asp-validation-summary="All"></div>
							<div class="col-md-12">
								<button  class="btn btn-outlined">Register</button>
							</div>
						</div>
					</div>
				</form>
			</div>
			
		</div>
	</div>
</main>
	